{
  "extends": ["airbnb", "airbnb/hooks"],
  "rules": {
    "linebreak-style": "off",
    "react/prop-types": 0,
    "valid-jsdoc": "warn",
    "require-jsdoc": "warn",
    "comma-dangle": "off",
    "semi": [0, "always"],
    "no-console": "off",
    "no-shadow": "off",
    "max-len": "off",
    "react/jsx-one-expression-per-line": "off",
    "requireReturnForObjectLiteral": true
  },
  "globals": {
    "document": "readonly",
    "sessionStorage": "writable",
    "fetch": "writable"
  }
}
